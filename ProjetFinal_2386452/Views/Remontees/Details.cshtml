@model ProjetFinal_2386452.Models.Remontee

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Remontee</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Longeur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Longeur) m
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TempEnMinute)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TempEnMinute) min
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vitesse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vitesse) m/s
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NbPylone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NbPylone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnneeConstruction)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnneeConstruction)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Photo != null && Model.Photo.Length > 0)
            {
                string imageBase64 = Convert.ToBase64String(Model.Photo);
                string imageSrc = String.Format("data:image/png;base64,{0}", imageBase64);
                <img src="@imageSrc" alt="Photo de la remontée" style="max-width:300px;" />
            }
            else
            {
                <p><em>Aucune photo disponible.</em></p>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Versant)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Versant.Nom)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
